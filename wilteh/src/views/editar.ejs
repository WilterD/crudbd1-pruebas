                        <div class="mb-3">
                            <label for="name" class="form-label">Cedula</label>
                            <input type="text" autocomplete="off" class="form-control" id="cedula" name="cedula" tabindex="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" autocomplete="off" class="form-control" id="nombre" name="nombre" tabindex="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Direccion</label>
                            <textarea type="text" autocomplete="off" class="form-control" id="direccion" name="direccion" tabindex="1" required></textarea>
                        </div>

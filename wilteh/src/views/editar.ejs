                            <select id="nombreDeporte" name="codDeporte" class="form-select" aria-label="Default select example"
                              tabindex="2" required>
                              <option selected disabled>Seleccione una categoria</option>
                                <option value="A">A</option>
                                <option value="I">I</option>
                                <option value="S">S</option>
                                <option value="G">G</option>
                                <option value="T">T</option>
                            </select>
                          </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Fecha Ingreso</label>
                            <input type="date" autocomplete="off" class="form-control" id="nombreCarrera" name="nombreCarrera" tabindex="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Fecha Egreso</label>
                            <input type="date" autocomplete="off" class="form-control" id="nombreCarrera" name="nombreCarrera" tabindex="1" required>
                        </div>
                        <div class="mb-3">
                            <label for="deporte" class="form-label">Estatus</label>
                            <select id="nombreDeporte" name="codDeporte" class="form-select" aria-label="Default select example"
                              tabindex="2" required>
                              <option selected disabled>Seleccione una categoria</option>
                                <option value="P">P</option>
                                <option value="A">A</option>
                                <option value="R">R</option>
                                <option value="J">J</option>
                            </select>
                          </div>
                        <button id="submit-btn" type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/guardar" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>        
      </div>
</body>
</html>